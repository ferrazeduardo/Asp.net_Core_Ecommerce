@model CarrinhoViewModel

@{
    ViewData["Title"] = "Carrinho de Compra";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produto</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor</th>
            <th scope="col">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Carrinho.GetProdutosCarrinho())
        {
        <tr>
            <th scope="row" class="">1</th>
            <td>@produto.Produto.Nome</td>
            <td> <input class="quantidade" type="number" id="evento_@produto.Produto.ProdutoId" min="1" max="@produto.Produto.Quantidade" value="@produto.Quantidade"> </td>
            <td  ><section class="evento_@produto.Produto.ProdutoId">@produto.Produto.Preco</section></td>
            <td  ><div name="evento_@produto.Produto.ProdutoId"> @produto.Produto.Preco</div></td>
        </tr>    
        }
        <tr>
            <th></th>
            <td colspan="2">Total</td>
            <td id="total"></td> 
            <td id="subTotal"></td>  
        </tr>
    </tbody>
</table>


<a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>

<script src="~/js/indexCarrinho.js"></script>