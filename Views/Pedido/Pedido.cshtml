@model EnderecoViewModel

<!-- form user info -->
<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">User Information</h3>
    </div>
    <div class="card-body">
        <form class="form" asp-controller="Pedido" asp-action="Pedido" method="post">
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label" asp-for="Localizacao"></label>
                <div class="col-lg-9">
                    <input class="form-control"  type="text" asp-for="Localizacao">
                </div>
                <span asp-validation-for="Localizacao"></span>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label" asp-for="NumeroDaCasa"></label>
                <div class="col-lg-9">
                    <input class="form-control" asp-for="NumeroDaCasa" type="number">
                </div>
                <span asp-validation-for="NumeroDaCasa"></span>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label" asp-for="Cidade"></label>
                <div class="col-lg-9">
                    <input class="form-control" type="text" asp-for="Cidade">
                </div>
                <span asp-validation-for="Cidade"></span>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label" asp-for="Estado"></label>
                <div class="col-lg-9">
                    <input class="form-control" type="text" asp-for="Estado">
                </div>
                <span asp-validation-for="Estado"></span>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label"></label>
                <div class="col-lg-9">
                    <input type="reset" class="btn btn-secondary" value="Cancel">
                    <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase">
                </div>
            </div>
        </form>
    </div>
</div>
<!-- /form user info -->