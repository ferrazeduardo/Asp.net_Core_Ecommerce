<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://img.icons8.com/cotton/64/000000/paypal--v2.png"></a>
                <div class="navbar-form navbar-left" role="search">
                    <form class="form-inline" asp-controller="Produto" asp-action="Procurar" method="get">
                        @Html.TextBox("stringProcurar",null,new {@class="site-search border-0 py-1",placeholder="Procurar"})
                        <button type="submit" class="search-button" ><img src="https://img.icons8.com/dusk/20/000000/search.png"></button>
                    </form>
                </div>
                <span>
                    @await Component.InvokeAsync("CarrinhoResumo")
                </span>
                <span>
                    @await Html.PartialAsync("_LoginPartial")       
                </span>
            </div>
        </nav>
        <!-- second menu -->
        <div class="second-menu mb-2">
            <div class="container mt-0 mb-4 ">
                <div class="">
                    @await Component.InvokeAsync("MenuCategoria")
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-dark">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 text-center col-md-12 mt-2 mt-sm-5">
                    <span ><img class="facebook" src="https://img.icons8.com/carbon-copy/60/000000/facebook.png"></span>
                    <span ><img class="google" src="https://img.icons8.com/carbon-copy/60/000000/google-plus.png"></span>
                    <span ><img class="twitter" src="https://img.icons8.com/carbon-copy/60/000000/twitter.png"></span>
                </div>
            </div>
            <div class="row ">
                <div class="col-xs-12 col-sm-12 text-center col-md-12 mt-2 mt-sm-5">
                    <p><u>Ecommerce Corporation</u>, Inc. Para/Brasil</p>
					<p class="h6">&copy Todos os Direitos Reservados.<a class="text-green ml-2" target="_blank">Desenvolvido com Asp.Net Core</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/indexCarrinho.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
